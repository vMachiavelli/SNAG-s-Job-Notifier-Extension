{
    "manifest_version": 3,
    "name": "LinkedIn Job Alerts",
    "version": "0.1.0",
    "description": "Notify me of new LinkedIn jobs posted in the last hour.",
    "permissions": [
      "alarms",
      "notifications",
      "storage"
    ],
    "host_permissions": [
      "https://www.linkedin.com/jobs-guest/jobs/api/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "options_page": "options.html",
    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "default_popup": "popup.html"
    }
  }
  